---
import { ArrowLeft, ArrowRight } from 'lucide-preact';

type Props = {
  current: number;
  isFirst: boolean;
  isLast: boolean;
  prefix?: string;
};

const { current, isFirst, isLast, prefix = '/' } = Astro.props;
---

<nav class="flex justify-between">
  {
    !isFirst && (
      <a
        href={`${prefix}page/${current - 1}`}
        class="group flex items-center gap-2"
      >
        <ArrowLeft class="stroke-brand" aria-hidden />
        <span class="group-hover:text-brand">previous</span>
      </a>
    )
  }
  {
    !isLast && (
      <a
        href={`${prefix}page/${current + 1}`}
        class="group ml-auto flex items-center gap-2"
      >
        <span class="group-hover:text-brand">next</span>
        <ArrowRight class="stroke-brand" aria-hidden />
      </a>
    )
  }
</nav>
