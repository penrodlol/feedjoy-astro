---
type Props = { title: string; href: string };

const { title, href } = Astro.props;
const external = href.startsWith('https://');
---

<a
  href={href}
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
  class={`group flex h-full flex-col gap-2 rounded bg-2 p-3 pb-4 shadow
          text-xs hover:bg-3 focus-visible:bg-3 transition-colors duration-150
          ease-in-out`}
>
  <div class="flex flex-wrap justify-between gap-x-4 gap-y-2 text-2">
    <div><slot name="first" /></div>
    <slot name="second" />
  </div>
  <p class="px-2 text-sm">{title}</p>
</a>
