---
import Paginator from '@components/Paginator.astro';
import Post from '@components/Post.astro';
import Layout from '@layouts/Layout.astro';
import { getPages } from '@lib/supabase/get-pages';

export const getStaticPaths = async () => {
  const pages = await getPages();
  return pages.map((page) => ({
    params: { slug: page.current },
    props: { page },
  }));
};

type GetStaticPaths = Awaited<ReturnType<typeof getStaticPaths>>;
type Props = NonNullable<GetStaticPaths>[number]['props'];

const page = Astro.props.page;
---

<Layout>
  <div class="mt-fluid-2 flex flex-col gap-fluid-4">
    <section>
      <ul class="grid grid-cols-1 gap-4 md:grid-cols-2">
        {
          page.posts.map((post) => (
            <li>
              <Post
                siteName={post.siteName}
                link={post.link}
                title={post.title}
                pubDate={post.pub_date}
              />
            </li>
          ))
        }
      </ul>
    </section>
    <section>
      <Paginator
        current={page.current}
        isFirst={page.isFirst}
        isLast={page.isLast}
      />
    </section>
  </div>
</Layout>
